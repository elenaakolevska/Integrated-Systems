@model List<Courses.Domain.DomainModels.Lecture>

@{
    ViewData["Title"] = "Index";
}

<div class="container">

    <div class="row">
        <a class="btn btn-success" style="width:200px; margin-left:28px" asp-action="Create">Insert New Lecture</a>
    </div>

    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];

        @if(i%3 == 0)
        {
            @:<div class="row">
        }

                <div class="col-3 m-3">

                    <div class="card" style="width: 20rem; height: 30rem;">

                        <div class="card-body">
                            <h3 class="card-title">@item.LectureName</h3>
                            <p class="card-text">@item.Date</p>
                            <p class="card-text">@item.CourseId</p>
                        </div>

                        <div class="card-footer">
                            <a asp-controller="Lectures" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                            <a asp-controller="Lectures" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>
                            <a asp-controller="Lectures" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </div>
                    </div>

                </div>

        @if(i%3 == 2) 
        {
            @:</div>    
        }
    }

</div>
